{
    "extends": "@tsconfig/recommended/tsconfig.json",
    "compilerOptions": {
        "target": "esnext",
        "outDir": "./dist",
        "declaration": true,
        "resolveJsonModule": true,
        // good practices
        "strict": true,
        "strictNullChecks": true,
        "useUnknownInCatchVariables": true,
        "noUncheckedIndexedAccess": true
    },
    "include": ["src"],
    "exclude": ["node_modules"]
}
